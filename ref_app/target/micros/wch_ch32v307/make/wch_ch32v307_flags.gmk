# ------------------------------------------------------------------------------
# compiler flags for the target architecture
# ------------------------------------------------------------------------------

GCC_TARGET   := riscv32-unknown-elf
GCC_PREFIX   := riscv32-unknown-elf

GCC_VERSION  := 13.2.0

TGT_SUFFIX    = elf

TGT_ALLFLAGS  = -O2                                            \
                -ffast-math                                    \
                -march=rv32imafc                               \
                -mabi=ilp32f                                   \
                -msmall-data-limit=16                          \
                -falign-functions=4

TGT_CFLAGS    = -std=c11                                       \
                -Wunsuffixed-float-constants                   \
                $(TGT_ALLFLAGS)

TGT_CXXFLAGS  = -std=c++23                                     \
                -Wno-psabi                                     \
                $(TGT_ALLFLAGS)

TGT_INCLUDES  = -isystem $(PATH_APP)/util/STL

TGT_AFLAGS    =  $(TGT_ALLFLAGS)

TGT_LDFLAGS   = -nostdlib                                      \
                -nostartfiles                                  \
                -Wl,--gc-sections                              \
                -Wl,-Map,$(APP).map                            \
                -T $(LINKER_DEFINITION_FILE)                   \
                $(TGT_ALLFLAGS)                                \
                --specs=nano.specs                             \
                --specs=nosys.specs
